{
  "name": "auto-cr-cmd",
  "version": "2.0.101",
  "description": "Fast automated code review CLI powered by SWC-based static analysis",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "bin": {
    "check": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "build:force": "tsc --build tsconfig.json --force",
    "postbuild": "node ../../scripts/readme-sync.mjs copy auto-cr-cmd",
    "postbuild:force": "node ../../scripts/readme-sync.mjs copy auto-cr-cmd",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "cli": "ts-node src/index.ts",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm run build && pnpm publish --access public --no-git-checks",
    "format": "prettier --write src"
  },
  "keywords": [
    "auto-cr",
    "code-review",
    "static-analysis",
    "cli",
    "linting",
    "typescript",
    "javascript",
    "developer-tools"
  ],
  "author": "wangweiwei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wangweiwei/auto-cr.git",
    "directory": "packages/auto-cr-cmd"
  },
  "homepage": "https://github.com/wangweiwei/auto-cr#readme",
  "bugs": {
    "url": "https://github.com/wangweiwei/auto-cr/issues"
  },
  "sideEffects": false,
  "dependencies": {
    "@swc/core": "^1.15.8",
    "@swc/wasm": "^1.15.10",
    "auto-cr-rules": "workspace:*",
    "commander": "^14.0.2",
    "consola": "^3.4.2",
    "jsonc-parser": "^3.3.1",
    "picomatch": "^4.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@swc/types": "^0.1.25",
    "@types/node": "^25.0.9",
    "@types/picomatch": "^4.0.2",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "jiti": "^2.5.1",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.51.0"
  }
}
