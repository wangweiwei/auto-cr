{
  "name": "auto-cr-rules",
  "version": "2.0.111",
  "description": "Extensible static analysis rule set for the auto-cr automated code review toolkit",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "build:force": "tsc --build tsconfig.json --force",
    "postbuild": "node ../../scripts/readme-sync.mjs copy auto-cr-rules",
    "postbuild:force": "node ../../scripts/readme-sync.mjs copy auto-cr-rules",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm run build && pnpm publish --access public --no-git-checks"
  },
  "keywords": [
    "auto-cr",
    "code-review",
    "static-analysis",
    "lint-rules",
    "typescript",
    "javascript",
    "swc",
    "developer-tools"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wangweiwei/auto-cr.git",
    "directory": "packages/auto-cr-rules"
  },
  "homepage": "https://github.com/wangweiwei/auto-cr#readme",
  "bugs": {
    "url": "https://github.com/wangweiwei/auto-cr/issues"
  },
  "sideEffects": false,
  "dependencies": {
    "@swc/types": "^0.1.25"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  }
}
